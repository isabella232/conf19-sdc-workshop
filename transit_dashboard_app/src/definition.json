{
	"dataSources": {
		"status_search": {
			"type": "ds.search",
			"options": {
				"query": "| from index:main where source=\"arrivals_and_departures_json_$suffix$\" select 'data.entry.arrivalsAndDepartures{}.tripStatus.status' as tripStatus | stats count(tripStatus) by tripStatus",
				"queryParameters": {
					"latest": "now",
					"earliest": "0"
				}
			}
		},
		"num_stops_search": {
			"type": "ds.search",
			"options": {
				"query": "| from index:main where source=\"arrivals_and_departures_json_$suffix$\" select 'data.entry.stopId' as stopId | stats dc(stopId) as numStops",
				"queryParameters": {
					"latest": "now",
					"earliest": "0"
				}
			}
		},
		"num_routes_search": {
			"type": "ds.search",
			"options": {
				"query": "| from index:main where source=\"arrivals_and_departures_json_$suffix$\" select 'data.references.routes{}.id' as routeIds | stats dc(routeIds) as numRoutes",
				"queryParameters": {
					"latest": "now",
					"earliest": "0"
				}
			}
		},
		"next_arrival_search": {
			"type": "ds.search",
			"options": {
				"query": "| from index:main where source=\"arrivals_and_departures_json_$suffix$\" | eval distanceFromStop=\"data.entry.arrivalsAndDepartures{}.distanceFromStop\"| eval routeLongName=\"data.entry.arrivalsAndDepartures{}.routeLongName\"| stats max(distanceFromStop) by routeLongName | rename \"max(distanceFromStop)\" as \"Distance\", routeLongName as \"Route Name\" | sort +Distance",
				"queryParameters": {
					"latest": "now",
					"earliest": "0"
				}
			}
		},
		"num_agencies_search": {
			"type": "ds.search",
			"options": {
				"query": "| from index:main where source=\"agencies_with_coverage_json_$suffix$\" select id | stats dc(id) as numAgencies",
				"queryParameters": {
					"latest": "now",
					"earliest": "0"
				}
			}
		},
		"trip_distance_search": {
			"type": "ds.search",
			"options": {
				"query": "| from index:main where source=\"arrivals_and_departures_json_$suffix$\" select 'data.entry.arrivalsAndDepartures{}.distanceFromStop' as distanceFromStop, 'data.entry.arrivalsAndDepartures{}.routeLongName' as routeLongName | stats max(distanceFromStop) by routeLongName | rename 'max(distanceFromStop)' as 'Distance', routeLongName as 'Route Name' | sort -Distance | head 5",
				"queryParameters": {
					"latest": "now",
					"earliest": "0"
				}
			}
		}
	},
	"inputs": {
		"input1": {
			"type": "input.text",
